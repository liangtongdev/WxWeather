/* pages/weather/index.wxss */

/*天气基本信息，包括温度，天气情况等*/

.inaline {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.intwoline {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wheather-basic {
  height: 270px;
  text-align: center;
  color: #666;
}

.wheather-basic .city {
  /*城市信息*/
  position: relative;
  top: 10px;
  left: 5px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.wheather-basic image {
  height: 91.5px;
  width: 103.5px;
  margin-top: -40px;
}

.wheather-basic .temperature {
  font-size: 60px;
  margin-top: -20px;
}

.wheather-basic .temperature .unit {
  font-size: 25px;
  vertical-align: text-top;
  margin-left: -10px;
}

.wheather-basic .wheather {
  font-size: 30px;
  margin-top: -10px;
}

.wheather-basic .temp-high-low {
  font-size: 16px;
}

.wheather-basic .temp-high-low .week {
  position: relative;
  left: 0px;
  margin-left: 15px;
}


.wheather-basic .temp-high-low .temp {
  margin-right: 15px;
}

/*天气额外信息，包括湿度，风力*/

.wheather-extra {
  height: 110px;
  text-align: center;
  font-size: 13px;
  color: gray;
}

.wheather-extra image {
  height: 32px;
  width: 32px;
}

.wheather-extra .tip {
  font-size: 10px;
  color: lightgray;
}

.wheather-extra .item {
  width: 33%;
}

.wheather-extra .line {
  width: 1px;
  height: 90px;
  background: #eee;
}

/*分天/小时的天气信息*/

.wheather-detail {
  margin-top: 20px;
  font-size: 20px;
  text-align: center;
}

.wheather-detail .title {
  height: 30px;
}

.wheather-detail .navibar-hour {
  padding-right: 20px;
  font-size: 18px;
  color: gray;
}

.wheather-detail .navibar-hour-selected {
  padding-right: 20px;
  font-size: 21px;
  color: burlywood;
}

.wheather-detail .navibar-day {
  padding-left: 20px;
  font-size: 18px;
  color: gray;
}

.wheather-detail .navibar-day-selected {
  padding-left: 20px;
  font-size: 21px;
  color: burlywood;
}

.wheather-detail .item-hourly {
  width: 40px;
  height: 120px;
  display: inline-block;
  text-align: center;
  font-size: 12px;
  color: gray;
  margin: 4px;
  border: 1px lightgray solid;
  border-radius: 10px;
}

.wheather-detail .item-daily {
  width: 100px;
  height: 120px;
  display: inline-block;
  text-align: center;
  font-size: 12px;
  color: gray;
  margin: 4px;
  border: 1px lightgray solid;
  border-radius: 10px;
}

.wheather-detail .item-hourly view {
  margin-top: 5px;
  margin-bottom: 5px;
}

.wheather-detail .item-daily view {
  margin-top: 5px;
  margin-bottom: 5px;
}

.wheather-detail  image {
  height: 25px;
  width: 25px;
}

/*生活指数*/

.weather-living-index {
  background: #fff;
}

.weather-living-index image {
  height: 40px;
  width: 40px;
}

.weather-living-index  .index-iname {
  font-size: 16px;
  color: gray;
}

.weather-living-index  .title {
  font-size: 13px;
  color: gray;
}

.weather-living-index  .subtitle {
  color: gray;
  font-size: 12px;
}
